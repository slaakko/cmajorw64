    public nothrow void StrCopy(char* buf, const char* from)
    {
        #assert(buf != null);
        if (from != null)
        {
            while (*from != '\0')
            {
                *buf = *from;
                ++buf;
                ++from;
            }
        }
        *buf = '\0';
    }
    
